{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@zdzz/shared": ["../packages/shared/src/index.ts"],
      "@zdzz/shared/global": ["../packages/shared/global.d.ts"],
      "@zdzz/shared/*": ["../packages/shared/*"],
      "@zdzz/hooks": ["../packages/hooks/src/index.ts"],
      "@zdzz/hooks/*": ["../packages/hooks/*"],
      "@zdzz/components": ["../packages/components/src/index.ts"],
      "@zdzz/components/*": ["../packages/components/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
